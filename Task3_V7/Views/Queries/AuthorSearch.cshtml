@model IEnumerable<Task3_V7.Data.Author>
@{
    ViewData["Title"] = "Author search";
    string q = (ViewBag.Q as string) ?? "";
}
<div class="card mb-3">
    <div class="card-header">Author search</div>
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-auto">
                <input class="form-control" name="q" value="@q" placeholder="e.g. Tolkien" />
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Search</button>
                <a class="btn btn-link" href="/Queries">Back</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Results</div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover align-middle">
                <thead><tr><th>Name</th><th>Birth</th><th>Death</th></tr></thead>
                <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.AuthorName</td>
                        <td>@(a.BirthDate?.ToString("yyyy-MM-dd") ?? "")</td>
                        <td>@(a.DeathDate?.ToString("yyyy-MM-dd") ?? "")</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No results.</p>
        }
    </div>
</div>