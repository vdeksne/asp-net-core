@model IEnumerable<Task3_V7.Data.Book>
@{
    ViewData["Title"] = "Books by year";
    int? minYear = ViewBag.MinYear as int?;
    string value = minYear.HasValue ? minYear.Value.ToString() : "";
}
<div class="card mb-3">
    <div class="card-header">Books by year</div>
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-auto">
                <input class="form-control" type="number" name="minYear" value="@value" placeholder="e.g. 1950" />
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Filter</button>
                <a class="btn btn-link" href="/Queries">Back</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Results</div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover align-middle">
                <thead><tr><th>Year</th><th>Title</th><th>Author</th></tr></thead>
                <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.YearPublished</td>
                        <td>@b.Title</td>
                        <td>@b.AuthorName</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No results.</p>
        }
    </div>
</div>