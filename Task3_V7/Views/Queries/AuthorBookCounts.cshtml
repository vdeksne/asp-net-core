@model IEnumerable<Task3_V7.Models.AuthorBookCountVM>
@{
    ViewData["Title"] = "Author book counts";
}
<div class="card">
    <div class="card-header">Author ? Book count</div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover align-middle">
                <thead><tr><th>Author</th><th>Books</th></tr></thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AuthorName</td>
                        <td>@item.BookCount</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No data.</p>
        }
        <a class="btn btn-link" href="/Queries">Back</a>
    </div>
</div>