@model IEnumerable<Task3_V7.Data.Book>
@{
    ViewData["Title"] = "Books sorted";
}
<div class="card">
    <div class="card-header">Books sorted by year then title</div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover align-middle">
                <thead><tr><th>Year</th><th>Title</th><th>Author</th></tr></thead>
                <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.YearPublished</td>
                        <td>@b.Title</td>
                        <td>@b.AuthorName</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No books.</p>
        }
        <a class="btn btn-link" href="/Queries">Back</a>
    </div>
</div>