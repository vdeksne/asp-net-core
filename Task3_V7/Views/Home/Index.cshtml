@model IEnumerable<Task3_V7.Data.Book>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Search Books by Author</h2>
<form method="get" asp-action="Index" asp-controller="Home">
    <input type="text" name="q" value="@((string?)ViewData["Query"])" placeholder="Enter author name" />
    <button type="submit">Search</button>
</form>
@if (!Model.Any())
{
    <p>No books found.</p>
}
else
{
    <table class="table">
        <thead><tr><th>Title</th><th>Author</th><th>Year</th></tr></thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.AuthorName</td>
                <td>@b.YearPublished</td>
            </tr>
        }
        </tbody>
    </table>
}
